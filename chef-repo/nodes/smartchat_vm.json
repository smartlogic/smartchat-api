{
  "build_essential" : {
    "compiletime" : true
  },
  "openssh" : {
    "permit_root_login" : "no",
    "password_authentication": "no"
  },
  "authorization" : {
    "sudo" : {
      "groups" : [
        "admin",
        "sudo"
      ],
      "passwordless" : true
    }
  },
  "postgresql" : {
    "password" : {
      "postgres" : "password"
    }
  },
  "rbenv" : {
    "group_users" : [
      "deploy",
      "vagrant"
    ]
  },
  "monit": {
    "poll_period" : 30,
    "poll_start_delay" : 60
  },
  "ruby_build" : {
    "version" : "20130923"
  },
  "run_list": [
    "build-essential",
    "annoyances",
    "openssl",
    "openssh",
    "sudo",
    "postgresql::server",
    "users_solo::admins",
    "nginx::repo",
    "nginx",
    "monit",
    "rbenv",
    "rbenv::ruby_build"
  ]
}
